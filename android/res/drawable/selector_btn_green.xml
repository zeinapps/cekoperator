<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#26ad60" />
            <gradient android:angle="-90" android:endColor="#26ad60" android:startColor="#26ad60" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0a3a1f" />
            <solid android:color="#27cc70" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2ecd71" />
            <gradient android:angle="-90" android:endColor="#2ecd71" android:startColor="#2ecd71" />
        </shape></item>

</selector>